<mvc:View controllerName="mypage.controller.MainPage"
    xmlns:mvc="sap.ui.core.mvc"    
    xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:forms="sap.ui.layout.form"
	xmlns:core="sap.ui.core"	>
    <m:Page id="page" title="{i18n>title}">
        <ObjectPageLayout id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false"
		useIconTabBar="true">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{i18n>HeaderTop}" wrapping="true" />
				</expandedHeading>

				<snappedHeading>
					<m:HBox>
						<m:VBox>
							<m:Avatar src="{Pictures>/AvatarPicture}" class="sapUiSmallMarginEnd" />
						</m:VBox>

						<m:VBox>
							<m:Title text="{i18n>HeaderTop}" wrapping="true" />
							<m:Label text="{i18n>HeaderSubtitle}"/>
						</m:VBox>
					</m:HBox>
				</snappedHeading>

				<expandedContent>
					<m:Label text="{i18n>HeaderSubtitle}"/>
				</expandedContent>				
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
				<m:Avatar src="{Pictures>/AvatarPicture}" class="sapUiMediumMarginEnd" displaySize="L"/>

				<m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom" width="40%">
					
					<m:Title text="{i18n>Contact}" class="sapUiTinyMarginBottom" />
					
					<m:HBox class="sapUiTinyMarginBottom">
						<core:Icon src="sap-icon://account"/>
						<m:Link text="Matúš Humaj" class="sapUiSmallMarginBegin" href="{links>/LinkedIn}" target="_blank"/>
					</m:HBox>

					<m:HBox class="sapUiTinyMarginBottom">
						<core:Icon src="sap-icon://outgoing-call"/>
						<m:Label text="{links>/Phone1} / {links>/Phone2}" class="sapUiSmallMarginBegin"/>
					</m:HBox>

					<m:HBox>
						<core:Icon src="sap-icon://email"/>
						<m:Link text="{links>/Email}" class="sapUiSmallMarginBegin" href="mailto:{links>/Email}"/>
					</m:HBox>
				</m:VBox>

				<m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom" width="40%">
					<m:Title  text="{i18n>AboutMeShort}" class="sapUiTinyMarginBottom" />
					<m:Text  text="{i18n>AboutMeShortText}"/>
				</m:VBox>								
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection titleUppercase="false" title="{i18n>tabEducation}">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						 <blocks>
							<core:Fragment fragmentName="mypage.fragments.education" type="XML"/>	
						</blocks>	
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>	

			<ObjectPageSection titleUppercase="false" title="{i18n>tabWorkExperience}">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						 <blocks>
							<m:Text text="Your schools, degrees…" />
						</blocks>	
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>	

			<ObjectPageSection titleUppercase="false" title="{i18n>tabCertifications}">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						 <blocks>
							<m:Text text="Your schools, degrees…" />
						</blocks>	
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>	

			<ObjectPageSection titleUppercase="false" title="{i18n>tabLanguages}">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						 <blocks>
							<m:Text text="Your schools, degrees…" />
						</blocks>	
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>			
		</sections>
	</ObjectPageLayout>
    </m:Page>
</mvc:View>